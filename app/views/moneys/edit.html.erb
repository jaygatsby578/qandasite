<h1>Moneys#edit</h1>
<p>※「<%= @money.item %>」の内容を編集します。</p>
<%= form_for(@money, url:{controller:'moneys',action:'edit', id:@money.id}) do |form| %>
    <div class="form-group">
        <label for="date">日付</label>
        <%= form.text_field :date, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="item">項目</label>
        <%= form.text_field :item, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="price">金額</label>
        <%= form.text_field :price, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="category">分類</label>
        <%= form.text_field :category, {class:"form-control"} %>
    </div>
    <div class="form-group">
        <label for="memo">日付</label>
        <%= form.text_area :memo, {class:"form-control"} %>
    </div>
    <%= form.submit "更新" %>
<% end %>
<p class="link"><a href="/moneys">&lt;&lt; ※トップページに戻る</a></p>
